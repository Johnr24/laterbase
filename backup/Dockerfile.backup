# Use a slim Debian image as a base, as we only need client tools
FROM debian:bullseye-slim

# Install postgresql-client (which includes pg_dump) and rclone
RUN apt-get update && apt-get install -y --no-install-recommends \
    postgresql-client \
    rclone \
    ca-certificates \
    && rm -rf /var/lib/apt/lists/*

# Create directory for backup scripts and backups
RUN mkdir -p /app /backups /config

# Copy the backup script and crontab
COPY backup.sh /app/backup.sh
# COPY crontab.txt /etc/cron.d/backup-cron # Removed, cron is not used
COPY entrypoint.sh /usr/local/bin/entrypoint.sh

# Make scripts executable
RUN chmod +x /app/backup.sh /usr/local/bin/entrypoint.sh
# Removed chmod for crontab and mkdir for /var/log

# Set working directory
WORKDIR /app

# ENTRYPOINT is removed. The entrypoint script will be run manually or by scheduler if needed.

# Keep the container running idly so the scheduler can exec into it
CMD ["tail", "-f", "/dev/null"]